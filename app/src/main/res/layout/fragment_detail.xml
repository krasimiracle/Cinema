<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    android:id="@+id/constraintLayout">

        <ImageView
            android:layout_width="424dp"
            android:layout_height="155dp"
            android:id="@+id/poster_detail_image"
            android:src="@drawable/test_image"
            android:scaleType="centerCrop"
            android:contentDescription="@string/trailer_link_image"
            tools:layout_editor_absoluteX="-5dp"
            tools:layout_editor_absoluteY="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            tools:layout_constraintLeft_creator="0"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            tools:layout_constraintTop_creator="0"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            tools:layout_constraintRight_creator="0"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            android:layout_marginBottom="16dp"
            tools:layout_constraintBottom_creator="0"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="108dp"
            android:layout_height="27dp"
            android:text="Interstellar"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="235dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            tools:layout_constraintLeft_creator="0"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="8dp"
            tools:layout_constraintTop_creator="0"
            app:layout_constraintRight_toRightOf="@+id/imageView"
            tools:layout_constraintRight_creator="0" />

        <ImageView
            android:src="@drawable/poster_image"
            android:layout_width="108dp"
            android:layout_height="145dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="82dp"
            android:id="@+id/imageView"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            tools:layout_constraintLeft_creator="0"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            android:layout_marginTop="100dp"
            tools:layout_constraintTop_creator="0"
            app:layout_constraintBottom_toBottomOf="@+id/poster_detail_image"
            tools:layout_constraintBottom_creator="0"
            app:layout_constraintVertical_bias="0.19" />

        <TextView
            android:text="Rating: "
            android:layout_width="73dp"
            android:layout_height="27dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="211dp"
            android:id="@+id/ratingTextView"
            app:layout_constraintLeft_toRightOf="@+id/movie_name"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            tools:layout_constraintLeft_creator="0"
            app:layout_constraintTop_toBottomOf="@+id/poster_detail_image"
            android:layout_marginTop="56dp"
            tools:layout_constraintTop_creator="0" />

        <TextView
            android:text="8.7"
            android:layout_width="56dp"
            android:layout_height="24dp"
            tools:layout_editor_absoluteX="305dp"
            tools:layout_editor_absoluteY="212dp"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintLeft_toRightOf="@+id/ratingTextView"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            tools:layout_constraintLeft_creator="0"
            app:layout_constraintTop_toTopOf="@+id/ratingTextView"
            tools:layout_constraintTop_creator="0"
            app:layout_constraintBottom_toBottomOf="@+id/ratingTextView"
            tools:layout_constraintBottom_creator="0" />

        <TextView
            android:text="Description: "
            android:layout_width="387dp"
            android:layout_height="276dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="290dp"
            android:id="@+id/description"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            tools:layout_constraintLeft_creator="0"
            app:layout_constraintTop_toBottomOf="@+id/movie_name"
            android:layout_marginTop="8dp"
            tools:layout_constraintTop_creator="0"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            tools:layout_constraintRight_creator="0"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            android:layout_marginBottom="16dp"
            tools:layout_constraintBottom_creator="0" />

</android.support.constraint.ConstraintLayout>